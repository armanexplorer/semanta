{
    "manifest_version": 2,
    "name": "Semanta",
    "description": "Enable reading mode on Chrome's official Extensions and Chrome Web Store documentation.",
    "version": "1.0",
    "default_locale":"en",
    "icons": {
      "16": "icons/icons8-search-16.png",
      "32": "icons/icons8-search-32.png",
      "48": "icons/icons8-search-48.png",
      "64": "icons/icons8-search-64.png",
      "128": "icons/icons8-search-128.png"
    },
    "background": {
        "scripts": [
            "browser-polyfill.js",
            "background.js"
        ]
    },
    "permissions": ["activeTab","storage"],
    "options_page": "options.html",
    "options_ui": {
      "page": "options.html",
      "browser_style": true
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/icons8-search-16.png",
            "32": "icons/icons8-search-32.png",
            "48": "icons/icons8-search-48.png",
            "64": "icons/icons8-search-64.png",
            "128": "icons/icons8-search-128.png"
        },
        "default_title": "(Click to Download paper)"
    }
}